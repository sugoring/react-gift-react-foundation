{
  "compilerOptions": {
    // 컴파일 옵션
    "target": "es2015", // ES6
    "module": "esnext", // 모듈 시스템
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // 라이브러리 목록

    // 모듈 해석 및 경로 관련
    "baseUrl": "./src", // 기준 경로
    "moduleResolution": "node", // 모듈 해석
    "resolveJsonModule": true, // JSON 모듈 해석
    "isolatedModules": true, // 개별 모듈

    // 엄격 모드 및 타입 검사
    "strict": true, // 엄격 타입 검사
    "skipLibCheck": true, // 라이브러리 타입 검사 건너뜀
    "forceConsistentCasingInFileNames": true, // 파일 이름 대소문자 일관성
    "noFallthroughCasesInSwitch": true, // switch문 case 누락 방지

    // JSX 및 React 관련
    "jsx": "react-jsx", // JSX -> React
    "allowSyntheticDefaultImports": true, // 기본 import 허용
    "esModuleInterop": true, // ESM 호환
  },

  "extends": "./tsconfig.paths.json",

  "include": ["src"]
}
